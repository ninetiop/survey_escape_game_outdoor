<style>
	/* Color Variables */
	:root {
		--primary-green: #2D5016;
		--primary-blue: #1E3A8A;
		--accent-orange: #EA580C;
		--success-green: #10B981;
		--warning-amber: #F59E0B;
		--error-red: #EF4444;
		--neutral-50: #F9FAFB;
		--neutral-100: #F3F4F6;
		--neutral-200: #E5E7EB;
		--neutral-300: #D1D5DB;
		--neutral-600: #4B5563;
		--neutral-700: #374151;
		--neutral-800: #1F2937;
		--neutral-900: #111827;
		--white: #FFFFFF;
		--spacing: 8px;
	}

	.adventure-container {
		width: 100%;
		overflow-x: hidden;
	}

	/* Navigation */
	.nav {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(20px);
		border-bottom: 1px solid var(--neutral-200);
		z-index: 1000;
		transition: all 0.3s ease;
	}

	.nav-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 calc(var(--spacing) * 3);
		display: flex;
		align-items: center;
		justify-content: space-between;
		height: calc(var(--spacing) * 9);
	}

	.logo h2 {
		font-family: 'Playfair Display', serif;
		font-size: 24px;
		font-weight: 600;
		color: var(--primary-green);
		margin: 0;
	}

	.nav-links {
		display: flex;
		gap: calc(var(--spacing) * 4);
		align-items: center;
	}

	.nav-links a {
		text-decoration: none;
		color: var(--neutral-700);
		font-weight: 500;
		transition: color 0.2s ease;
		position: relative;
	}

	.nav-links a:hover {
		color: var(--primary-green);
	}

	.nav-links a::after {
		content: '';
		position: absolute;
		bottom: -4px;
		left: 0;
		width: 0;
		height: 2px;
		background: var(--primary-green);
		transition: width 0.3s ease;
	}

	.nav-links a:hover::after {
		width: 100%;
	}

	.cta-button {
		background: linear-gradient(135deg, var(--primary-green) 0%, var(--primary-blue) 100%);
		color: var(--white);
		padding: calc(var(--spacing) * 1.5) calc(var(--spacing) * 3);
		border-radius: calc(var(--spacing) * 1);
		text-decoration: none;
		font-weight: 600;
		transition: all 0.3s ease;
		box-shadow: 0 4px 12px rgba(45, 80, 22, 0.3);
	}

	.cta-button:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 24px rgba(45, 80, 22, 0.4);
	}

	/* Hero Section */
	.hero {
		position: relative;
		height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		overflow: hidden;
	}

	.hero-bg {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(45deg, 
			url('https://images.pexels.com/photos/417074/pexels-photo-417074.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2') center/cover,
			url('https://images.pexels.com/photos/1624496/pexels-photo-1624496.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2') center/cover
		);
		background-image: url('https://images.pexels.com/photos/417074/pexels-photo-417074.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2');
		background-size: cover;
		background-position: center;
		background-attachment: fixed;
	}

	.hero-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, rgba(45, 80, 22, 0.7) 0%, rgba(30, 58, 138, 0.6) 100%);
	}

	.hero-content {
		position: relative;
		z-index: 2;
		max-width: 800px;
		padding: 0 calc(var(--spacing) * 3);
		animation: fadeInUp 1s ease-out;
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.hero-title {
		font-family: 'Playfair Display', serif;
		font-size: clamp(48px, 8vw, 72px);
		font-weight: 700;
		color: var(--white);
		margin: 0 0 calc(var(--spacing) * 3) 0;
		line-height: 1.2;
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
	}

	.hero-subtitle {
		font-size: clamp(18px, 3vw, 24px);
		color: var(--neutral-100);
		margin: 0 0 calc(var(--spacing) * 5) 0;
		line-height: 1.5;
		font-weight: 400;
	}

	.hero-buttons {
		display: flex;
		gap: calc(var(--spacing) * 3);
		justify-content: center;
		flex-wrap: wrap;
	}

	.btn-primary, .btn-secondary {
		padding: calc(var(--spacing) * 2) calc(var(--spacing) * 4);
		border-radius: calc(var(--spacing) * 1);
		text-decoration: none;
		font-weight: 600;
		font-size: 18px;
		transition: all 0.3s ease;
		display: inline-block;
	}

	.btn-primary {
		background: linear-gradient(135deg, var(--accent-orange) 0%, #F97316 100%);
		color: var(--white);
		box-shadow: 0 4px 15px rgba(234, 88, 12, 0.4);
	}

	.btn-primary:hover {
		transform: translateY(-3px);
		box-shadow: 0 8px 25px rgba(234, 88, 12, 0.6);
	}

	.btn-secondary {
		background: rgba(255, 255, 255, 0.1);
		color: var(--white);
		border: 2px solid rgba(255, 255, 255, 0.3);
		backdrop-filter: blur(10px);
	}

	.btn-secondary:hover {
		background: rgba(255, 255, 255, 0.2);
		border-color: rgba(255, 255, 255, 0.5);
		transform: translateY(-3px);
	}

	.scroll-indicator {
		position: absolute;
		bottom: calc(var(--spacing) * 4);
		left: 50%;
		transform: translateX(-50%);
		animation: bounce 2s infinite;
	}

	.scroll-arrow {
		width: 24px;
		height: 24px;
		border: 2px solid var(--white);
		border-top: none;
		border-left: none;
		transform: rotate(45deg);
	}

	@keyframes bounce {
		0%, 20%, 50%, 80%, 100% { transform: translateX(-50%) translateY(0); }
		40% { transform: translateX(-50%) translateY(-10px); }
		60% { transform: translateX(-50%) translateY(-5px); }
	}

	/* Common Styles */
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 calc(var(--spacing) * 3);
	}

	.section-title {
		font-family: 'Playfair Display', serif;
		font-size: clamp(36px, 5vw, 48px);
		font-weight: 600;
		text-align: center;
		margin: 0 0 calc(var(--spacing) * 8) 0;
		color: var(--neutral-800);
	}

	.section-title.white {
		color: var(--white);
	}

	/* Adventures Section */
	.adventures {
		padding: calc(var(--spacing) * 12) 0;
		background: var(--neutral-50);
	}

	.adventures-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: calc(var(--spacing) * 4);
	}

	.adventure-card {
		background: var(--white);
		border-radius: calc(var(--spacing) * 2);
		overflow: hidden;
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
		transition: all 0.3s ease;
	}

	.adventure-card:hover {
		transform: translateY(-8px);
		box-shadow: 0 16px 48px rgba(0, 0, 0, 0.15);
	}

	.card-image {
		height: 240px;
		background-size: cover;
		background-position: center;
		position: relative;
	}

	.mountain-card {
		background-image: url('https://images.pexels.com/photos/1624496/pexels-photo-1624496.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2');
	}

	.forest-card {
		background-image: url('https://images.pexels.com/photos/417074/pexels-photo-417074.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2');
	}

	.combined-card {
		background-image: url('https://images.pexels.com/photos/1266810/pexels-photo-1266810.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2');
	}

	.card-content {
		padding: calc(var(--spacing) * 3);
	}

	.card-content h3 {
		font-family: 'Playfair Display', serif;
		font-size: 24px;
		font-weight: 600;
		color: var(--neutral-800);
		margin: 0 0 calc(var(--spacing) * 2) 0;
	}

	.card-content p {
		color: var(--neutral-600);
		line-height: 1.6;
		margin: 0 0 calc(var(--spacing) * 3) 0;
	}

	.card-features {
		display: flex;
		flex-wrap: wrap;
		gap: calc(var(--spacing) * 1);
		margin-bottom: calc(var(--spacing) * 3);
	}

	.feature {
		background: var(--neutral-100);
		color: var(--neutral-700);
		padding: calc(var(--spacing) * 0.5) calc(var(--spacing) * 1.5);
		border-radius: calc(var(--spacing) * 2);
		font-size: 14px;
		font-weight: 500;
	}

	.card-cta {
		display: inline-block;
		background: linear-gradient(135deg, var(--primary-green) 0%, var(--primary-blue) 100%);
		color: var(--white);
		padding: calc(var(--spacing) * 1.5) calc(var(--spacing) * 3);
		border-radius: calc(var(--spacing) * 1);
		text-decoration: none;
		font-weight: 600;
		transition: all 0.3s ease;
		width: 100%;
		text-align: center;
	}

	.card-cta:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 20px rgba(45, 80, 22, 0.3);
	}

	/* About Section */
	.about {
		padding: calc(var(--spacing) * 12) 0;
		background: var(--white);
	}

	.about-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: calc(var(--spacing) * 8);
		align-items: center;
	}

	.about-description {
		font-size: 18px;
		line-height: 1.6;
		color: var(--neutral-600);
		margin: 0 0 calc(var(--spacing) * 6) 0;
	}

	.about-features {
		display: flex;
		flex-direction: column;
		gap: calc(var(--spacing) * 4);
	}

	.feature-item {
		display: flex;
		align-items: flex-start;
		gap: calc(var(--spacing) * 2);
	}

	.feature-icon {
		font-size: 32px;
		flex-shrink: 0;
	}

	.feature-text h4 {
		font-size: 20px;
		font-weight: 600;
		color: var(--neutral-800);
		margin: 0 0 calc(var(--spacing) * 1) 0;
	}

	.feature-text p {
		color: var(--neutral-600);
		margin: 0;
		line-height: 1.5;
	}

	.about-image {
		position: relative;
	}

	.nature-showcase {
		height: 500px;
		background: linear-gradient(45deg,
			rgba(45, 80, 22, 0.1) 0%,
			rgba(30, 58, 138, 0.1) 100%
		),
		url('https://images.pexels.com/photos/1591373/pexels-photo-1591373.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2');
		background-size: cover;
		background-position: center;
		border-radius: calc(var(--spacing) * 2);
		box-shadow: 0 16px 48px rgba(0, 0, 0, 0.1);
	}

	/* Contact Section */
	.contact {
		padding: calc(var(--spacing) * 12) 0;
		background: linear-gradient(135deg, var(--primary-green) 0%, var(--primary-blue) 100%);
		color: var(--white);
	}

	.contact-subtitle {
		text-align: center;
		font-size: 18px;
		color: var(--neutral-100);
		margin: 0 0 calc(var(--spacing) * 8) 0;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
	}

	.contact-grid {
		display: grid;
		grid-template-columns: 1fr 2fr;
		gap: calc(var(--spacing) * 8);
	}

	.contact-info h3,
	.booking-form h3 {
		font-size: 24px;
		font-weight: 600;
		margin: 0 0 calc(var(--spacing) * 4) 0;
	}

	.contact-item {
		display: flex;
		align-items: center;
		gap: calc(var(--spacing) * 2);
		margin-bottom: calc(var(--spacing) * 3);
		font-size: 16px;
	}

	.contact-icon {
		font-size: 20px;
		width: 24px;
		text-align: center;
	}

	/* Form Styles */
	.form {
		display: flex;
		flex-direction: column;
		gap: calc(var(--spacing) * 3);
	}

	.form-row {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: calc(var(--spacing) * 2);
	}

	.form-input,
	.form-textarea {
		padding: calc(var(--spacing) * 2);
		border: 1px solid rgba(255, 255, 255, 0.2);
		border-radius: calc(var(--spacing) * 1);
		background: rgba(255, 255, 255, 0.1);
		color: var(--white);
		font-size: 16px;
		backdrop-filter: blur(10px);
		transition: all 0.3s ease;
	}

	.form-input::placeholder,
	.form-textarea::placeholder {
		color: rgba(255, 255, 255, 0.7);
	}

	.form-input:focus,
	.form-textarea:focus {
		outline: none;
		border-color: var(--accent-orange);
		background: rgba(255, 255, 255, 0.15);
	}

	.full-width {
		grid-column: 1 / -1;
	}

	.form-textarea {
		resize: vertical;
		min-height: calc(var(--spacing) * 15);
	}

	.form-submit {
		background: linear-gradient(135deg, var(--accent-orange) 0%, #F97316 100%);
		color: var(--white);
		padding: calc(var(--spacing) * 2) calc(var(--spacing) * 4);
		border: none;
		border-radius: calc(var(--spacing) * 1);
		font-size: 18px;
		font-weight: 600;
		cursor: pointer;
		transition: all 0.3s ease;
	}

	.form-submit:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 20px rgba(234, 88, 12, 0.4);
	}

	/* Responsive Design */
	@media (max-width: 1024px) {
		.nav-container {
			padding: 0 calc(var(--spacing) * 2);
		}
		
		.container {
			padding: 0 calc(var(--spacing) * 2);
		}
		
		.about-content {
			grid-template-columns: 1fr;
			gap: calc(var(--spacing) * 6);
		}
		
		.contact-grid {
			grid-template-columns: 1fr;
			gap: calc(var(--spacing) * 6);
		}
	}

	@media (max-width: 768px) {
		.nav-links {
			display: none;
		}
		
		.hero-buttons {
			flex-direction: column;
			align-items: center;
		}
		
		.btn-primary, .btn-secondary {
			width: 100%;
			max-width: 300px;
		}
		
		.adventures-grid {
			grid-template-columns: 1fr;
		}
		
		.form-row {
			grid-template-columns: 1fr;
		}
		
		.hero-bg {
			background-attachment: scroll;
		}
		
		.about-features {
